---
interface Props {
    name: string;
    url: string;
    description?: string;
    avatar?: string;
}

const { name, url, description, avatar } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="card-base flex items-center p-4 rounded-[var(--radius-large)] hover:bg-[var(--card-hover-bg)] transition">
    {avatar && (
        <img src={avatar} alt={`${name} avatar`} class="w-12 h-12 rounded-full mr-4" />
    )}
    <div class="flex-1">
        <h3 class="font-bold text-lg text-[var(--text)]">{name}</h3>
        {description && <p class="text-sm text-[var(--text-secondary)]">{description}</p>}
    </div>
    <svg class="w-5 h-5 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
    </svg>
</a>
